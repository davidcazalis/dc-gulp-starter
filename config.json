{
  "libs": "./app/libs",
  "styles" : {
    "src" : "./app/assets/styles/**/*.scss",
    "dest" : "./app/assets/styles",
    "build" : "./build/assets/styles"
  },
  "templates" : {
    "src" : [
      "./app/views/*.jade",
      "!./app/views/_*.jade"
    ],
    "dest" : "./app/views",
    "build" : "./build/views"
  },
  "scripts" : {
    "src" : [
      "./app/scripts/*.js",
      "!./app/scripts/vendor.js",
      "!./app/scripts/app.js"
    ],
    "dest" : "./app/scripts",
    "build" : "./build/scripts",
    "vendor" : [
      "./app/libs/jquery/dist/jquery.js",
      "./app/libs/modernizr/modernizr.js"
    ],
    "app" : [
      ""
    ]
  },
  "browserslist" : ["> 5%", "last 2 versions", "ie 9"]
}
